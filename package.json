{
  "name": "masonkeiser.com",
  "version": "1.0.0",
  "private": true,
  "description": "Simple and clean portfolio website.",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "npm-run-all --silent --parallel dev:*",
    "dev:client": "webpack-dev-server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "devicons": "^1.8.0",
    "minimist": "^1.2.5",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "react-lazy-load": "^3.0.13",
    "react-popper": "^1.3.7",
    "react-scroll": "^1.7.16",
    "react-starfield-animation": "^1.0.1",
    "reactstrap": "^8.4.1"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/plugin-transform-react-jsx": "7.7.0",
    "babel-eslint": "10.0.3",
    "babel-loader": "8.0.6",
    "eslint": "6.6.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.16.0",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^3.1.0",
    "lint-staged": "9.4.3",
    "npm-run-all": "4.1.5",
    "webpack": "^4.42.0",
    "webpack-cli": "3.3.10",
    "webpack-dev-server": "^3.11.0"
  },
  "eslintIgnore": [
    "server/public/main.js"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parser": "babel-eslint",
    "extends": [
      "plugin:react/recommended",
      "eslint:recommended",
      "standard"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "padded-blocks": 0,
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never",
          "asyncArrow": "always"
        }
      ],
      "react/prop-types": 0
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mason-keiser/new_portfolio.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/mason-keiser/new_portfolio/issues"
  },
  "homepage": "https://github.com/mason-keiser/new_portfolio/issues#readme"
}
